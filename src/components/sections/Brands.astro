---
import Container from "../shared/Container.astro";
import { icons } from "../../utils/data.ts";
---

<section>
  <Container className="space-y-8">
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {
        icons.map((service: any) => {
          return (
            <div class="flex flex-col   p-4 sm:p-5 rounded-xl bg-body border border-[#c6ab7c] group gap-5">
              <div class="flex w-full justify-center  rounded-xl bg-gray-300 dark:bg-gray-950 p-3 text-heading-1 relative">
                <div class="w-14 text-heading-1 ">
                  <slot set:html={service.icon} />
                </div>
              </div>

              <div>
                <h2 class="font-semibold text-xl sm:text-xl md:text-2xl text-heading-1">
                  {service.title}
                </h2>
                <p class="mt-2 text-heading-3">{service.description}</p>
              </div>
            </div>
          );
        })
      }
    </div>
  </Container>
</section>
